<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/toast_horizontal_padding"
    android:paddingRight="@dimen/toast_horizontal_padding"
    android:paddingTop="@dimen/toast_vertical_padding"
    android:paddingBottom="@dimen/toast_vertical_padding"
    android:background="@drawable/bg_common_utils_toast">


    <TextView
        android:id="@+id/text_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/toast_max_width"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/toast_font_size_t28"
        android:textColor="@color/toast_font_color_cff"/>


</RelativeLayout>
